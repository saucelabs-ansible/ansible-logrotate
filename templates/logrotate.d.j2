# {{ ansible_managed }}

{% for path in item.path %}
"{{ path }}"
{% endfor %}
{
{% if item.options is defined %}
{%   for option in item.options %}
    {{ option }}
{%   endfor %}
{% endif %}
{% if item.scripts is defined -%}
{%   for name, script in item.scripts.iteritems() %}
    {{ name }}
{%     for script_line in script.split('\n') %}
        {{ script_line }}
{%     endfor %}
    endscript
{%   endfor %}
{% endif %}
}
